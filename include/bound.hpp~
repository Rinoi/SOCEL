#ifndef __BOUND__
#define __BOUND__

class Bound
{

public:
  
  ~Bound()
  {}
  Bound()
  {
    this->x = 0;
    this->y = 0;
    this->width = 0;
    this->height = 0;
  }

  Bound(const Bound &bound)
  {
    *this = bound;
  }

  Bound(int posX, int PosY,
	unsigned int width, unsigned int height);

  const Bound		&operator=(const Bound &bound)
  {
    this->x = bound.x;
    this->y = bound.y;
    this->width = bound.width;
    this->height = bound.height;
    return (*this);
  }

public:

  int			getX() const
  {return (this->x);}

  int			getY() const
  {return (this->y);}

  unsigned int		getWidth() const
  {return (this->width);}

  unsigned int		getHeight() const
  {return (this->height);}

private:

  int		x;
  int		y;
  unsigned int	width;
  unsigned int	height;

};

#endif
